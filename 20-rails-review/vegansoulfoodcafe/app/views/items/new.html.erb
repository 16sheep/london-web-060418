<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.collection_select(:brand_id, @brands, :id, :name) %>
  <%= f.collection_check_boxes(:hipster_ids, @hipsters, :id, :caps_name) %>
  <%= f.submit %>
<% end %>
